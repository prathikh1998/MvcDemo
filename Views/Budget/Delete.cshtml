@model Mvc_Models.Models.Budget

@{
    ViewData["Title"] = "Delete Budget";
}

<h2>Delete Budget</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this budget?</strong>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Month
        </dt>
        <dd class="col-sm-10">
            @Model.Month
        </dd>
        <dt class="col-sm-2">
            Year
        </dt>
        <dd class="col-sm-10">
            @Model.Year
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Model.Amount.ToString("C")
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
