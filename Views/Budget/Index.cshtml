@model IEnumerable<Mvc_Models.Models.Budget>

@{
    ViewData["Title"] = "My Budgets";
}

<h2>My Budgets</h2>

<table class="table">
    <thead>
        <tr>
            <th>Month</th>
            <th>Year</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var budget in Model)
        {
            <tr>
                <td>@budget.Month</td>
                <td>@budget.Year</td>
                <td>@budget.Amount.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@budget.ID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@budget.ID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Budget</a>
