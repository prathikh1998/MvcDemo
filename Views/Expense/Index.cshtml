@model IEnumerable<Mvc_Models.Models.Expense>

@{
    ViewData["Title"] = "My Expenses";
}

<h2>My Expenses</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add Expense</a>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Category</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var expense in Model)
        {
            <tr>
                <td>@expense.Date.ToShortDateString()</td>
                <td>@expense.Description</td>
                <td>@expense.Category?.Name</td>
                <td>@expense.Amount$</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@expense.ID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@expense.ID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
